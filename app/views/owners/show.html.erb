<div class="container">
	<div class="row">
		<div class="col-xs-offset-1">
			<h3>事業者マイページ</h3>
		</div>
			<div class="col-xs-2 col-xs-offset-1">
				<%= attachment_image_tag @owner, :profire_image, :fill, 300, 200, size: "100x100", fallback: "no_image.png" %>
			</div>
			<div>
				<%= current_owner.full_name %>
			</div>
	</div>
</div>

<div class="col-xs-offset-1">
	<h4>投稿したプロジェクト</h4>
</div>


<div class="container">
	<div class="col-xs-10 ">
		<div class="row">
			<% @projects.each do |project| %>
				<div class="col-xs-3">
					<%= attachment_image_tag project, :advertising_image, :limit, 50, 50, size: "180x150", fallback: "no_image.png" %><br>
					<span>  <%= link_to project.project_title, project_path(project.id) %></span>
					<p>現在</p><p><%= project.total_support %>円</p>
					<p>残り</p><p><%= project.post_period %>日</p>
					<p>支援者</p><p><%= @supporter_counts[project.id] %>人</p>

				</div>
			<% end %>
		</div>
	</div>
</div>