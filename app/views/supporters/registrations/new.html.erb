<div class="container">
  <h3>支援者新規会員登録</h3>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group col-xs-9">
        <%= label_tag(:full_name, '名前', {class: "col-xs-3"})%>
        <div class="col-xs-4">
          <%= f.text_field :surname, placeholder: "姓",autofocus: true, class: "form-control" %>
        </div>
        <div class="col-xs-4">
          <%= f.text_field :name, placeholder: "名", class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-xs-9">
        <%= label_tag :kana_full_name, 'カナ', class: "col-xs-3" %>
        <div class="col-xs-4">
          <%= f.text_field :kana_surname, placeholder: "セイ", class: "form-control" %>
        </div>
        <div class="col-xs-4">
          <%= f.text_field :kana_name, placeholder: "メイ", class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :email, 'メールアドレス', class: "col-xs-3" %>
        <div class="col-xs-4">
          <%= f.email_field :email, placeholder: "email@example.com", autocomplete: "email", class: "form-control"  %>
        </div>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-xs-3" %>
        <div class="col-xs-4">
          <%= f.text_field :postal_code, placeholder: "1234567", class: "form-control"  %>
        </div>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :address, '住所', class: "col-xs-3" %>
        <div class="col-xs-6">
          <%= f.text_field :address, placeholder: "東京都＊＊区", class: "form-control"  %>
        </div>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :phone_number, "電話番号(ハイフンなし)", class: "col-xs-3" %>
        <div class="col-xs-4">
          <%= f.text_field :phone_number, placeholder: "000000000", class: "form-control"  %>
        </div>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :password, "パスワード(6文字以上)", class: "col-xs-3" %>
        <div class="col-xs-4">
          <%= f.password_field :password, placeholder: "******", autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-xs-3" %>
        <div class="col-xs-4">
          <%= f.password_field :password_confirmation, placeholder: "******", autocomplete: "new-password", class: "form-control"  %>
        </div>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :profire_image, "プロフィール画像", class: "col-xs-4" %>
        <%= attachment_image_tag @owner, :profire_image, :fill, 200, 150, fallback: "no_image.png" %>
        <%= f.attachment_field :profire_image %>
      </div>

      <div class="actions">
        <%= f.submit "事業者登録する", class: "btn btn-success col-xs-2 col-xs-offset-5" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-xs-5">
      <h4>すでにご登録がお済みの方</h4>
      <%= link_to 'こちら', new_supporter_session_path %>
      <span>からログインしてください</span>
    </div>
  </div>
</div>