<div class="container">
	<div class="row">
		<div class="col-xs-offset-1">
			<h3>支援者マイページ</h3>
		</div>
			<div class="col-xs-2 col-xs-offset-1">
				<%= attachment_image_tag current_supporter, :profire_image, :fill, 300, 200, size: "100x100", fallback: "no_image.png" %>
			</div>
			<div>
				<%= current_supporter.full_name %>
			</div>
	</div>
</div>

<div class="col-xs-offset-1">
	<h4>支援したプロジェクト</h4>
</div>


<div class="container">
	<div class="col-xs-10 ">
		<div class="row">
			<% @projects.each do |project| %>
				<div class="col-xs-3">
					<%= attachment_image_tag project, :advertising_image, :limit, 300, 300, size: "180x150", fallback: "no_image.png" %><br>
					<span>  <%= link_to project.project_title, project_path(project.id) %></span>
					<p>現在</p><p><%= project.total_support %>円</p>
					<% if (project.deadline - Date.today).to_i >= 0 %>
					<p>残り</p><p><%= (project.deadline - Date.today).to_i %>日</p>
					<% else %>
					<th>終了</th>
					<% end %>
					<p>支援者</p><p><%= project.support_projects.count %>人</p>

				</div>
			<% end %>
		</div>
	</div>
</div>