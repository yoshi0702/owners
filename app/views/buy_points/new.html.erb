<div class="container">
  <h3>ポイント購入画面</h3>

  <div class="row">
    <%= form_for(@buy_point) do |b| %>

      <div class="form-group col-xs-9">
        <%= b.label :purchase_point, '購入ポイント', class: "col-xs-3" %>
        <div class="col-xs-4">
          <%= b.number_field :purchase_point, placeholder: "（例）10000", class: "form-control" %>P
        </div>
      </div>

      <div class="actions">
        <%= b.submit "購入する", class: "btn btn-success col-xs-2 col-xs-offset-5" %>
      </div>

    <% end %>
  </div>

</div>