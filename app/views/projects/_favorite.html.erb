<% if project.favorited_by?(current_supporter) %>
	<%= link_to project_favorites_path(project), method: :delete, remote: true do %>
		<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
	<% end %>
		<%= project.favorites.count %>
<% else %>
	<%= link_to project_favorites_path(project), method: :post , remote: true do %>
		<i class="fa fa-heart" aria-hidden="true" style="color: gray;"></i>
	<% end %>
		<%= project.favorites.count %>
<% end %>