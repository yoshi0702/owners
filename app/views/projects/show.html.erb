<div class="container">
	<div class="row">
		<div class="col-xs-offset-1">
			<h3>プロジェクト詳細</h3>
		</div>

		<div class="col-xs-4 col-xs-offset-2">
			<%= attachment_image_tag @project, :advertising_image, :fill, 300, 200, size: "300x250", fallback: "no_image.png" %>
		</div>

		<div class="col-xs-4 col-xs-offset-2">
			<%= form_for(@point_history,url: point_historys_path) do |f| %>
				<%= hidden_field_tag(:project_id, @project.id) %>
		      <div class="form-group col-xs-9">
		        	<%= f.label :point, '支援ポイント入力フォーム', class: "col-xs-12" %>
		        <div class="col-xs-12">
		          <%= f.number_field :point, placeholder: "（例）100000", class: "form-control"  %>P
		        </div>
		      </div>
				<div class="actions">
		        	<%= f.submit "このプロジェクトに支援", class: "btn btn-success col-xs-2 col-xs-offset-5" %>
				</div>
    		<% end %>
    	</div>



		<div class="col-xs-4">
			<table class="table">

				<tr>
					<th>タイトル</th><td><%= @project.project_title %></td>
				</tr>

				<tr>
					<th>概要</th><td><%= @project.summary_sentence %></td>
				</tr>

				<tr>
					<th>地域</th><td><%= @area.prefecture_name %></td>
				</tr>

				<tr>
					<th>出資者数</th><td><%= @supportersSum.count %></td>
				</tr>

				<tr>
					<th>応募締切まで</th><td><%= @project.post_period %></td>
				</tr>

				<tr>
					<th>目標金額</th><td><%= @project.target_amount %>円</td>
				</tr>

				<tr>
					<th>出資金総額</th><td><%= @project.total_support %>円</td>
				</tr>

				<tr>
					<th>本文</th><td><%= @project.text %></td>
				</tr>
			</table>
		</div>
	</div>
</div>