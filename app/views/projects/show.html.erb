<div class="container">
		<div class="col-xs-offset-1">
			<h3>プロジェクト詳細</h3>
		</div>

		<div class="col-xs-4 col-xs-offset-2">
			<%= attachment_image_tag @project, :advertising_image, :fill, 300, 200, size: "300x250", fallback: "no_image.png" %>
		</div>
		<% if supporter_signed_in? %>
			<% if (@project.deadline - Date.today).to_i >= 0 %>
				<div class="col-xs-4 col-xs-offset-2">
					<%= form_for(@point_history,url: point_historys_path) do |f| %>
						<%= hidden_field_tag(:project_id, @project.id) %>
				        <%= f.label :point, '支援ポイント入力フォーム', class: "col-xs-12" %>
				        <div class="col-xs-12">
				            <%= f.number_field :point, placeholder: "（例）100000", class: "form-control"  %>P
				        </div>
						<div class="actions">
				        	<%= f.submit "このプロジェクトに支援", class: "btn btn-success col-xs-2 col-xs-offset-5" %>
						</div>
					<% end %>
				</div>
	    	<% end %>
    	<% end %>


		<div class="col-xs-4">
			<table class="table">

				<tr>
					<th>タイトル</th><td><%= @project.project_title %></td>
				</tr>

				<tr>
					<th>概要</th><td><%= @project.summary_sentence %></td>
				</tr>

				<tr>
					<th>地域</th><td><%= @area.prefecture_name %></td>
				</tr>

				<tr>
					<th>出資者数</th><td><%= @supportersSum.count %>人</td>
				</tr>

				<tr>
					<% if (@project.deadline - Date.today).to_i >= 0 %>
					<th>応募締切まで</th><td><%= (@project.deadline - Date.today).to_i %>日</td>
					<% else %>
					<th>終了</th>
					<% end %>
				</tr>

				<tr>
					<th>目標金額</th><td><%= @project.target_amount %>円</td>
				</tr>

				<tr>
					<th>出資金総額</th><td><%= @project.total_support %>円</td>
				</tr>

				<tr>
					<th>本文</th><td><%= @project.text %></td>
				</tr>

				<tr>
					<% if supporter_signed_in? %>
	    				<div id="favorites_buttons_<%= @project.id %>" class="col-md-2 col-xs-3">
						<%= render 'projects/favorite', project: @project %>
						</div>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
	<% if admin_signed_in? %>
    	<div id="favorites_buttons_<%= @project.id %>" class="col-md-2 col-xs-3">
			<div class="row">
			  	<%= link_to 'プロジェクトを編集する',  edit_project_path, class: "btn btn-danger col-xs-1 col-xs-offset-2" %>
		    </div>
		</div>
	<% end %>
</div>




