<h1>プロジェクト一覧</h1>

<div class="container">
	<div class="row">
		<div class="col-xs-2" >
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>地域検索</th>
					</tr>
				</thead>
				<tbody>
					<% @areas.each do |area| %>
						<tr>
							<td>
								<%=link_to area.prefecture_name, projects_path(area_id: area.id) %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>

		<div class="col-xs-10 ">
				<h3>プロジェクト一覧 (全<%= @projects.count %>件)</h3>
			<div class="row">
				<% @projects.each do |project| %>
				<div class="col-xs-3">
					<%= attachment_image_tag project, :advertising_image, :limit, 300, 300, size: "180x150", fallback: "no_image.png" %><br>
					<span>  <%= link_to project.project_title, project_path(project.id) %></span>
					<p>現在</p><p><%= project.total_support %>円</p>
					 <% if (project.deadline - Date.today).to_i >= 0 %>
					<p>残り</p><p><%= (project.deadline - Date.today).to_i %>日</p>
					<% else %>
					<th>終了</th>
					<% end %>
					<p>支援者</p><p><%=project.support_projects.count %>人</p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

